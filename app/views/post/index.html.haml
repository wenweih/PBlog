- title "文章列表"
- meta_tag :description,"关注 Web 全栈开发，总结 Web 开发经验，前端，后端  Full Stack Developer"
- meta_tag :keywords,"博客,个人主页,全栈工程师,前端,后端,Fronted-end,Back-end,Ruby,Rails"
= stylesheet_link_tag    'simditor', media: 'all', 'data-turbolinks-track' => true
.post-index
  .stackable.very.relaxed.ui.grid.container
    .row
      .ten.wide.column.post_list.ui.list
        - @posts.each do |p |
          - cache p do
            = render partial: 'post', locals: { p: p }
        = paginate @posts
      .six.wide.column.post_list_sidebar
        .tweet_list
          .ui.header.tweet_header
            Thinking Tweet
          = link_to tweets_path, class: 'ui right floated header' do
            MORE >>
          .ui.list
            - @tweets.each do |tweet|
              - cache tweet do
                %p.item
                  %span.time
                    #{tweet.created_at.strftime('%F %H:%M')}
                    说:
                  = truncate tweet.content, length: 77
        .most_read.ui.list
        .tag_list
          .ui.header
            Posts Tags
          .ui.labels
            - @tags.each do |tag|
              - cache tag do
                = link_to "javascript:void(0)", class: 'ui basic label' do
                  = tag.name
        .categories
          .ui.header
            Post Categories
          .ui.list
            - Category.all.each do |category|
              - cache category do
                .item
                  = link_to post_index_path(category: category.id), class:"category" do
                    %i.book.icon
                    = category.title
        .comment_list
