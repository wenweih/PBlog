%section.main.post-list-index
  %h4.ui.header.home-posts-title 最新文章
  .ui.list-post-list
    - @posts.each do |p|
      %article.item.post-article
        %h2.post-item-title.header
          = link_to "#{p.title}",post_path(p), class:'post-link'
        %p.post-meta
          发布于
          %time.timeago{datetime: "#{p.created_at.strftime('%Y-%m-%d %H:%M')}"}
        .home-post-list
          = p.sub_content.html_safe
:javascript
  document.addEventListener("turbolinks:load", function() {
    $('pre code').each(function(i, block) {
      hljs.highlightBlock(block);
    });
  });
